<div class="page-header">
  <h1>Survey <%= @survey.title %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= t('.title')%>:</strong></dt>
  <dd><%= @survey.title %></dd>
  <dt><strong><%= t('.description')%>:</strong></dt>
  <dd><%= @survey.description %></dd>
  <dt><strong><%= t('.city')%>:</strong></dt>
  <dd><%= @survey.city %></dd>
  <dt><strong><%= t('.start_date')%>:</strong></dt>
  <dd><%= @survey.start_date %></dd>
  <dt><strong><%= t('.end_date')%>:</strong></dt>
  <dd><%= @survey.end_date %></dd>
</dl>

<div class="form-actions">

  <%= link_to t('.edit_button'), edit_survey_path(@survey), :html_options => { :class => "btn"} %> |
  <%= link_to t('.back_button'), surveys_path %>

</div>



