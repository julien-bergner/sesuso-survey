<h2><%= t('.title') %></h2>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>
  <%= f.input :first_name, :autofocus => true %>
  <%= f.input :last_name %>
  <%= f.input :email, :required => true %>
  <%= f.input :password, :required => true %>
  <%= f.input :password_confirmation, :required => true %>

  <% if Figaro.env.use_user_address == "true" %>
    <div class="control-group">
      <%= f.input :street, :wrapper_html => { :class => "inline_field_wrapper", :style => 'width: 275px' } %>
      <%= f.input :street_number, :wrapper_html => { :class => "inline_field_wrapper" }, :input_html => { :maxlength => 5, :style => 'width: 50px'} %>
    </div>
    <div class="control-group">
      <%= f.input:zip, :wrapper_html => { :class => "inline_field_wrapper", :style => 'width: 120px'}, :input_html => {:maxlength => 5, :style => 'width: 50px'} %>
      <%= f.input:city, :wrapper_html => { :class => "inline_field_wrapper" } %>
    </div>
  <% end %>

  <%= f.input :mobile_phone %>
  <%= f.input :date_of_birth, :as => :date, :start_year => Date.today.year - 90,
              :end_year => Date.today.year - 12,
              :order => [:day, :month, :year] %>
  <%= f.input :drivers_license %>

    <div class="control-group">
      <%= f.input:bank_account_number, :wrapper_html => { :class => "inline_field_wrapper", :style => 'width: 290px' } %>
      <%= f.input:bank_identification_code, :wrapper_html => { :class => "inline_field_wrapper" } %>
    </div>

  <%= f.button :submit, t('.signup'), :class => 'btn-primary' %>
<% end %>



