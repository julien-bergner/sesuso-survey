<%- model_class = Interviewer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:first_name) %></th>
      <th><%= model_class.human_attribute_name(:last_name) %></th>
      <th><%= model_class.human_attribute_name(:street) %></th>
      <th><%= model_class.human_attribute_name(:street_number) %></th>
      <th><%= model_class.human_attribute_name(:zip) %></th>
      <th><%= model_class.human_attribute_name(:mobile_phone) %></th>
      <th><%= model_class.human_attribute_name(:date_of_birth) %></th>
      <th><%= model_class.human_attribute_name(:drivers_license) %></th>
      <th><%= model_class.human_attribute_name(:bank_account_number) %></th>
      <th><%= model_class.human_attribute_name(:bank_identification_code) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @interviewers.each do |interviewer| %>
      <tr>
        <td><%= link_to interviewer.id, interviewer_path(interviewer) %></td>
        <td><%= interviewer.first_name %></td>
        <td><%= interviewer.last_name %></td>
        <td><%= interviewer.street %></td>
        <td><%= interviewer.street_number %></td>
        <td><%= interviewer.zip %></td>
        <td><%= interviewer.mobile_phone %></td>
        <td><%= interviewer.date_of_birth %></td>
        <td><%= interviewer.drivers_license %></td>
        <td><%= interviewer.bank_account_number %></td>
        <td><%= interviewer.bank_identification_code %></td>
        <td><%= interviewer.email %></td>
        <td><%=l interviewer.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_interviewer_path(interviewer), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      interviewer_path(interviewer),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_interviewer_path,
            :class => 'btn btn-primary' %>
