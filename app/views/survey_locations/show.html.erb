<%- model_class = SurveyLocation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @survey_location.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @survey_location.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:notice) %>:</strong></dt>
  <dd><%= @survey_location.notice %></dd>
  <dt><strong><%= model_class.human_attribute_name(:street) %>:</strong></dt>
  <dd><%= @survey_location.street %></dd>
  <dt><strong><%= model_class.human_attribute_name(:street_number) %>:</strong></dt>
  <dd><%= @survey_location.street_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:zip) %>:</strong></dt>
  <dd><%= @survey_location.zip %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
  <dd><%= @survey_location.city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:url) %>:</strong></dt>
  <dd><%= @survey_location.url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:map_url) %>:</strong></dt>
  <dd><%= @survey_location.map_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:survey_area_id) %>:</strong></dt>
  <dd><%= @survey_location.survey_area_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              survey_locations_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_survey_location_path(@survey_location), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              survey_location_path(@survey_location),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
